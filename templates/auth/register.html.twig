{% extends 'base-auth.html.twig' %}

{% block title %}Création d'un compte{% endblock %}

{% block auth_body %}
    <div class="w-full space-y-6">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <div>
            <h1 class="h2 text-center mb-2">
                Bienvenue !
            </h1>
            <p class="text-base text-center text-slate-500">Créé ton compte et ajoute tes livres à la bibliothèque gratuitement</p>
        </div>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, { attr: { 'class': 'w-full space-y-6' } }) }}
        {{ form_row(registrationForm.name) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <div class="flex flex-col gap-3 mt-4">
            <button type="submit" class="btn btn-primary py-4 text-lg">
                Créer mon compte
            </button>
            <a href="{{ path('app_login') }}" class="btn btn-outline w-full">
                J’ai déjà un compte
            </a>
        </div>
        {{ form_end(registrationForm) }}

    </div>
{% endblock %}
